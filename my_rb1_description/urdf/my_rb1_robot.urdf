<?xml version="1.0" ?>
<robot name="rb1_robot">

    <!-- Define materials for visualization -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.40 0.40 0.40 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- Base footprint link -->
    <link name="base_footprint">
    </link>

    <!-- Joint connecting base_link and base_footprint -->
    <!-- TO DO: Set correct joint type -->
    <joint name="base_link_plate_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

    <!-- Base link -->
    <link name="base_link">
        <!-- TO DO: Add visual tag -->
        <!-- TO DO: Add collision tag -->
        <!-- TO DO: Add inertial tag -->
            <visual>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="20.0"/>
            <inertia ixx="0.4625" ixy="0.0" ixz="0.0"
                     iyy="0.4625" iyz="0.0"
                     izz="0.625"/>
        </inertial>
    </link>

    <!-- Left wheel -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.00023125" ixy="0.0" ixz="0.0"
                     iyy="0.00023125" iyz="0.0"
                     izz="0.001"/>
        </inertial>
    </link>

    <joint name="base_link_left_wheel_joint" type="continuous">
        <origin xyz="0 0.2 -0.15" rpy="-1.5708 0 0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.00023125" ixy="0.0" ixz="0.0"
                     iyy="0.00023125" iyz="0.0"
                     izz="0.001"/>
        </inertial>
    </link>

    <joint name="base_link_right_wheel_joint" type="continuous">
        <origin xyz="0 -0.2 -0.15" rpy="-1.5708 0 0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0 0 1"/>
    </joint>

        <!-- Front caster -->
    <link name="front_caster">
        <visual>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.00020833" ixy="0.0" ixz="0.0"
                     iyy="0.00020833" iyz="0.0"
                     izz="0.00020833"/>
        </inertial>
    </link>

    <joint name="base_link_front_caster_joint" type="fixed">
        <origin xyz="0.1 0 -0.15" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="front_caster"/>
    </joint>

        <link name="back_caster">
        <visual>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.00020833" ixy="0.0" ixz="0.0"
                     iyy="0.00020833" iyz="0.0"
                     izz="0.00020833"/>
        </inertial>
    </link>

    <joint name="base_link_back_caster_joint" type="fixed">
        <origin xyz="-0.1 0 -0.15" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="back_caster"/>
    </joint>
    <!-- Laser scanner -->
    <link name="front_laser">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.1"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.0002" ixy="0.0" ixz="0.0"
                     iyy="0.0002" iyz="0.0"
                     izz="0.0002"/>
        </inertial>
    </link>

    <joint name="base_link_front_laser_joint" type="fixed">
        <origin xyz="0.25 0.0 0.075" rpy="3.1416 0 0"/>
        <parent link="base_link"/>
        <child link="front_laser"/>
    </joint>

    <!-- Gazebo visualization and physics properties -->

<gazebo reference="base_link">
    <material>Gazebo/Black</material>
</gazebo>

<gazebo reference="left_wheel">
    <!-- Contact/friction parameters -->
    <mu1>1.0</mu1>          <!-- friction coefficient in first direction -->
    <mu2>1.0</mu2>          <!-- friction coefficient in second direction -->
    <kp>1000000.0</kp>      <!-- contact stiffness -->
    <kd>10.0</kd>           <!-- contact damping -->
    <fdir1>1 0 0</fdir1>    <!-- friction direction -->
    <material>Gazebo/Red</material>
</gazebo>

<gazebo reference="right_wheel">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <fdir1>1 0 0</fdir1>
    <material>Gazebo/Red</material>
</gazebo>

<gazebo reference="front_caster">
    <mu1>0.5</mu1>          <!-- less friction for casters -->
    <mu2>0.5</mu2>
    <kp>500000.0</kp>
    <kd>1.0</kd>
    <fdir1>1 0 0</fdir1>
    <material>Gazebo/Gray</material>
</gazebo>

<gazebo reference="back_caster">
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
    <kp>500000.0</kp>
    <kd>1.0</kd>
    <fdir1>1 0 0</fdir1>
    <material>Gazebo/Gray</material>
</gazebo>
<gazebo>
  <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
    <ros>
      <namespace>/</namespace>
      <remapping>cmd_vel:=/cmd_vel</remapping>
      <remapping>odom:=/odom</remapping>
    </ros>
    <leftJoint>base_link_left_wheel_joint</leftJoint>
    <rightJoint>base_link_right_wheel_joint</rightJoint>
    <wheelSeparation>0.4</wheelSeparation>
    <wheelDiameter>0.05</wheelDiameter>
    <robotBaseFrame>base_link</robotBaseFrame>
    <odometryFrame>odom</odometryFrame>
  </plugin>
</gazebo>
<gazebo reference="front_laser">
    <sensor type="ray" name="head_hokuyo_sensor">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>20</update_rate>
        <ray>
            <scan>
                <horizontal>
                    <samples>720</samples>
                    <resolution>1</resolution>
                    <min_angle>-1.570796</min_angle>
                    <max_angle>1.570796</max_angle>
                </horizontal>
            </scan>
            <range>
                <min>0.20</min>
                <max>10.0</max>
                <resolution>0.01</resolution>
            </range>
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.01</stddev>
            </noise>
        </ray>
        <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
            <topicName>/scan</topicName>
            <frameName>front_laser</frameName>
        </plugin>
    </sensor>
</gazebo>
</robot>