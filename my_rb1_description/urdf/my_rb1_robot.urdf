<?xml version="1.0" ?>
<robot name="rb1_robot">

    <!-- Define materials for visualization -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.40 0.40 0.40 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- Base footprint link -->
    <link name="base_footprint">
    </link>

    <!-- Joint connecting base_link and base_footprint -->
    <!-- TO DO: Set correct joint type -->
    <joint name="base_link_plate_joint" type="fixed">
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

    <!-- Base link -->
    <link name="base_link">
        <!-- TO DO: Add visual tag -->
        <!-- TO DO: Add collision tag -->
        <!-- TO DO: Add inertial tag -->
            <visual>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="20.0"/>
            <inertia ixx="0.4625" ixy="0.0" ixz="0.0"
                     iyy="0.4625" iyz="0.0"
                     izz="0.625"/>
        </inertial>
    </link>

    <!-- Left wheel -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>

            <inertia ixx="0.00023125" ixy="0.0" ixz="0.0"
                     iyy="0.00023125" iyz="0.0"
                        izz="0.0003125"/>
        </inertial>
    </link>

    <joint name="base_link_left_wheel_joint" type="continuous">
        <origin xyz="0 0.2 -0.15" rpy="-1.5708 0 0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>

            <inertia ixx="0.00023125" ixy="0.0" ixz="0.0"
                     iyy="0.00023125" iyz="0.0"
                        izz="0.0003125"/>
        </inertial>
    </link>

    <joint name="base_link_right_wheel_joint" type="continuous">
        <origin xyz="0 -0.2 -0.15" rpy="-1.5708 0 0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0 0 1"/>
    </joint>

        <!-- Front caster -->
    <link name="front_caster">
        <visual>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.00020833" ixy="0.0" ixz="0.0"
                     iyy="0.00020833" iyz="0.0"
                     izz="0.00020833"/>
        </inertial>
    </link>

    <joint name="base_link_front_caster_joint" type="fixed">
        <origin xyz="0.1 0 -0.15" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="front_caster"/>
    </joint>

        <link name="back_caster">
        <visual>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.00020833" ixy="0.0" ixz="0.0"
                     iyy="0.00020833" iyz="0.0"
                     izz="0.00020833"/>
        </inertial>
    </link>

    <joint name="base_link_back_caster_joint" type="fixed">
        <origin xyz="-0.1 0 -0.15" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="back_caster"/>
    </joint>
    <!-- Laser scanner -->
    <link name="front_laser">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.1"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.0002" ixy="0.0" ixz="0.0"
                     iyy="0.0002" iyz="0.0"
                     izz="0.0002"/>
        </inertial>
    </link>

    <joint name="base_link_front_laser_joint" type="fixed">
        <origin xyz="0.25 0.0 0.075" rpy="3.1416 0 0"/>
        <parent link="base_link"/>
        <child link="front_laser"/>
    </joint>


</robot>